  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
    <!-- 工作排程 設定 -->
    <add key="SchdEndptNamePrefix" value="SchdService_AP"/>

    <!-- Test LDAP Mail 設定 -->
    <add key="TestMailFlag" value="N" />
