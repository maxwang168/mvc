        </tr>
        <tr>
            <th class="mainLabel" width="15%">
                說明：
            </th>
            <td class="editTable" width="85%" colspan="3">
                @Html.TextBoxFor(a => a.EditSysCodeInfo.Description, new { @class = "form-control", MaxLength = 128 })
