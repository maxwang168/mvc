        <tr>
            <th class="mainLabel" width="15%">
                資料狀態：
            </th>
            <td class="editTable" width="85%" colspan="3">
                @Html.RadioButtonFor(a => a.EditSysCodeInfo.StatusFlag, "Y", new { Checked = "checked" })
