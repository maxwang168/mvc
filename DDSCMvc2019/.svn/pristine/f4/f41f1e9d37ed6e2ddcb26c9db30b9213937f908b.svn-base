        <tfoot>
            <tr>
                <td align="center" colspan="4">
                    <a href="javascript:confirmEdit();" class="Ok" onclick="return isConfirm();">儲存</a>&nbsp;&nbsp;
                    @Html.ActionLink("離開", "Index", null, new { @class = "Exit" })
                </td>
